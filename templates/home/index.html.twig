{% extends 'base.html.twig' %}

{% block title %}{{ 'home.title'|trans }}{% endblock %}

{% block body %}
<div class="home">

    {# ====== HERO SECTION ====== #}
    <section class="home-hero">
        <div class="home-hero__vignette"></div>
        <div class="home-hero__content">
            <div class="home-hero__ornament">&#x2726;</div>
            <div class="home-hero__logo">
                <img src="{{ asset('asset/img/logo.png') }}" alt="Darkest Fight Arena">
            </div>
            <div class="home-hero__separator">
                <span></span>
                <i class="fas fa-skull"></i>
                <span></span>
            </div>
            <p class="home-hero__tagline">{{ 'home.tagline'|trans }}</p>
            <div class="home-hero__actions">
                {% if app.user %}
                    <a href="{{ path('app_teams') }}" class="btn-dd btn-dd--primary">
                        {{ 'home.enter_arena'|trans }}
                    </a>
                {% else %}
                    <a href="{{ path('app_register') }}" class="btn-dd btn-dd--primary">
                        {{ 'home.enlist'|trans }}
                    </a>
                    <a href="{{ path('app_login') }}" class="btn-dd btn-dd--secondary">
                        {{ 'home.login'|trans }}
                    </a>
                {% endif %}
            </div>
            <div class="home-hero__ornament">&#x2726;</div>
        </div>
    </section>

    {# ====== HOW TO PLAY ====== #}
    <section class="home-steps">
        <div class="home-steps__header">
            <h2 class="home-steps__title">{{ 'home.how_to_play'|trans }}</h2>
            <div class="home-steps__separator">
                <span></span>
                <span></span>
            </div>
            <p class="home-steps__subtitle">{{ 'home.how_subtitle'|trans }}</p>
        </div>

        <div class="home-steps__grid">
            <div class="home-step">
                <div class="home-step__number">I</div>
                <div class="home-step__icon">
                    <i class="fas fa-users"></i>
                </div>
                <h3 class="home-step__title">{{ 'home.step1_title'|trans }}</h3>
                <p class="home-step__desc">{{ 'home.step1_desc'|trans }}</p>
            </div>

            <div class="home-step">
                <div class="home-step__number">II</div>
                <div class="home-step__icon">
                    <i class="fas fa-crosshairs"></i>
                </div>
                <h3 class="home-step__title">{{ 'home.step2_title'|trans }}</h3>
                <p class="home-step__desc">{{ 'home.step2_desc'|trans }}</p>
            </div>

            <div class="home-step">
                <div class="home-step__number">III</div>
                <div class="home-step__icon">
                    <i class="fas fa-fist-raised"></i>
                </div>
                <h3 class="home-step__title">{{ 'home.step3_title'|trans }}</h3>
                <p class="home-step__desc">{{ 'home.step3_desc'|trans }}</p>
            </div>
        </div>
    </section>

    {# ====== CHARACTER SHOWCASE ====== #}
    <section class="home-showcase">
        <div class="home-showcase__header">
            <h2 class="home-showcase__title">{{ 'home.heroes'|trans }}</h2>
            <div class="home-showcase__separator">
                <span></span>
                <span></span>
            </div>
            <p class="home-showcase__subtitle">{{ 'home.heroes_subtitle'|trans }}</p>
        </div>

        <div class="home-showcase__characters">
            <div class="home-showcase__character">
                <div class="home-showcase__sprite">
                    <img src="{{ asset('asset/sprites/crusader-idle.gif') }}" alt="Crusader">
                </div>
                <span class="home-showcase__name">Crusader</span>
                <span class="home-showcase__role">Tank</span>
            </div>
            <div class="home-showcase__character">
                <div class="home-showcase__sprite">
                    <img src="{{ asset('asset/sprites/highwayman-idle.gif') }}" alt="Highwayman">
                </div>
                <span class="home-showcase__name">Highwayman</span>
                <span class="home-showcase__role">DPS</span>
            </div>
            <div class="home-showcase__character">
                <div class="home-showcase__sprite">
                    <img src="{{ asset('asset/sprites/vestal-idle.gif') }}" alt="Vestal">
                </div>
                <span class="home-showcase__name">Vestal</span>
                <span class="home-showcase__role">{{ 'home.role_healer'|trans }}</span>
            </div>
            <div class="home-showcase__character">
                <div class="home-showcase__sprite">
                    <img src="{{ asset('asset/sprites/hellion-idle.gif') }}" alt="Hellion">
                </div>
                <span class="home-showcase__name">Hellion</span>
                <span class="home-showcase__role">DPS</span>
            </div>
            <div class="home-showcase__character">
                <div class="home-showcase__sprite">
                    <img src="{{ asset('asset/sprites/plague-doctor-idle.gif') }}" alt="Plague Doctor">
                </div>
                <span class="home-showcase__name">Plague Doctor</span>
                <span class="home-showcase__role">Support</span>
            </div>
            <div class="home-showcase__character">
                <div class="home-showcase__sprite">
                    <img src="{{ asset('asset/sprites/man-at-arms-idle.gif') }}" alt="Man-at-Arms">
                </div>
                <span class="home-showcase__name">Man-at-Arms</span>
                <span class="home-showcase__role">Tank</span>
            </div>
        </div>

        <div class="home-showcase__cta">
            <a href="{{ path('app_personnages') }}" class="btn-dd btn-dd--secondary">
                {{ 'home.see_all_characters'|trans }}
            </a>
        </div>
    </section>

    {# ====== FINAL CTA ====== #}
    <section class="home-cta">
        <div class="home-cta__panel">
            <div class="home-cta__ornament">&#x2726;</div>
            <h2 class="home-cta__title">{{ 'home.ready_for_combat'|trans }}</h2>
            <p class="home-cta__text">{{ 'home.ready_text'|trans }}</p>
            {% if app.user %}
                <a href="{{ path('app_teams') }}" class="btn-dd btn-dd--primary btn-dd--large">
                    {{ 'home.start_game'|trans }}
                </a>
            {% else %}
                <a href="{{ path('app_register') }}" class="btn-dd btn-dd--primary btn-dd--large">
                    {{ 'home.create_account'|trans }}
                </a>
            {% endif %}
            <div class="home-cta__ornament">&#x2726;</div>
        </div>
    </section>

</div>
{% endblock %}
