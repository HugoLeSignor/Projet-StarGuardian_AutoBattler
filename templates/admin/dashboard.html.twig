{% extends 'base.html.twig' %}

{% block title %}{{ 'nav.admin'|trans }}{% endblock %}

{% block body %}
<div class="admin-page">
    <div class="admin-page__vignette"></div>

    <div class="admin-header">
        <h1 class="admin-header__title"><i class="fas fa-crown"></i> {{ 'admin.title'|trans }}</h1>
        <nav class="admin-nav">
            <a href="{{ path('app_admin') }}" class="admin-nav__link admin-nav__link--active">
                <i class="fas fa-tachometer-alt"></i> {{ 'admin.dashboard'|trans }}
            </a>
            <a href="{{ path('app_admin_users') }}" class="admin-nav__link">
                <i class="fas fa-users"></i> {{ 'admin.users'|trans }}
            </a>
            <a href="{{ path('app_admin_reports') }}" class="admin-nav__link">
                <i class="fas fa-flag"></i> {{ 'admin.reports'|trans }}
                {% if pendingReports > 0 %}
                    <span class="admin-nav__badge">{{ pendingReports }}</span>
                {% endif %}
            </a>
        </nav>
    </div>

    <div class="admin-stats">
        <div class="admin-stat">
            <span class="admin-stat__value">{{ totalUsers }}</span>
            <span class="admin-stat__label"><i class="fas fa-users"></i> {{ 'admin.users'|trans }}</span>
        </div>
        <div class="admin-stat">
            <span class="admin-stat__value">{{ totalBattles }}</span>
            <span class="admin-stat__label"><i class="fas fa-shield-alt"></i> {{ 'admin.battles'|trans }}</span>
        </div>
        <div class="admin-stat">
            <span class="admin-stat__value">{{ totalMessages }}</span>
            <span class="admin-stat__label"><i class="fas fa-comment"></i> {{ 'admin.messages'|trans }}</span>
        </div>
        <div class="admin-stat admin-stat--alert">
            <span class="admin-stat__value">{{ pendingReports }}</span>
            <span class="admin-stat__label"><i class="fas fa-flag"></i> {{ 'admin.reports'|trans }}</span>
        </div>
    </div>

    <div class="admin-sections">
        <div class="admin-section">
            <h2 class="admin-section__title"><i class="fas fa-user-plus"></i> {{ 'admin.recent_users'|trans }}</h2>
            {% if recentUsers|length > 0 %}
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>{{ 'admin.table_user'|trans }}</th>
                            <th>{{ 'admin.table_email'|trans }}</th>
                            <th>{{ 'admin.table_mmr'|trans }}</th>
                            <th>{{ 'admin.table_status'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in recentUsers %}
                            <tr>
                                <td>
                                    <a href="{{ path('app_admin_user_detail', {id: user.id}) }}" class="admin-link">
                                        {{ user.username }}
                                    </a>
                                </td>
                                <td class="admin-table__muted">{{ user.email }}</td>
                                <td>{{ user.rating }}</td>
                                <td>
                                    {% if user.isBanned %}
                                        <span class="admin-badge admin-badge--danger">{{ 'admin.badge_banned'|trans }}</span>
                                    {% else %}
                                        <span class="admin-badge admin-badge--ok">{{ 'admin.badge_active'|trans }}</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p class="admin-empty">{{ 'admin.no_users_simple'|trans }}</p>
            {% endif %}
        </div>

        <div class="admin-section">
            <h2 class="admin-section__title"><i class="fas fa-flag"></i> {{ 'admin.recent_reports'|trans }}</h2>
            {% if reportedMessages|length > 0 %}
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>{{ 'admin.table_author'|trans }}</th>
                            <th>{{ 'admin.table_message'|trans }}</th>
                            <th>{{ 'admin.table_reported_by'|trans }}</th>
                            <th>{{ 'admin.table_reason'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for msg in reportedMessages %}
                            <tr>
                                <td>{{ msg.sender.username }}</td>
                                <td class="admin-table__msg">{{ msg.content|slice(0, 60) }}{{ msg.content|length > 60 ? '...' : '' }}</td>
                                <td>{{ msg.reportedBy ? msg.reportedBy.username : '?' }}</td>
                                <td class="admin-table__muted">{{ msg.reportReason|default('admin.reason_default'|trans) }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <a href="{{ path('app_admin_reports') }}" class="admin-section__more">{{ 'admin.see_all_reports'|trans }} <i class="fas fa-arrow-right"></i></a>
            {% else %}
                <p class="admin-empty">{{ 'admin.no_reports'|trans }}</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
