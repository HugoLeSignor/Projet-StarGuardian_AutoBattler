{% extends 'base.html.twig' %}

{% block title %}Hello ArenaController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<h1>Combat test</h1>

    <h3 style="color:blue;">Equipe 1</h3>
    <ul>
        {% for member in composition['Equipe 1'] %}
            <li>{{ member.name }} (PV: {{ member.hp }})</li>
        {% endfor %}
    </ul>

    <h3 style="color:red;">Equipe 2</h3>
    <ul>
        {% for member in composition['Equipe 2'] %}
            <li>{{ member.name }} (PV: {{ member.hp }})</li>
        {% endfor %}
    </ul>

{% for log in logs %}
    <p>{{ log |raw }}</p>
    
{% endfor %}

{% endblock %}
