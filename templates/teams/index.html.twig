{% extends 'base.html.twig' %}

{% block title %}Teams{% endblock %}

{% block body %}
<section class="teams-layout">

    {# ===== GRILLE PERSONNAGES (GAUCHE) ===== #}
    <div class="team-grid">
        {% for hero in heroes %}
            <div class="team-portrait"
                 data-name="{{ hero.name }}"
                 data-role="{{ hero.role }}"
                 data-gif="{{ asset(hero.gif) }}"
                 data-atq="{{ hero.atq }}"
                 data-def="{{ hero.def }}"
                 data-vit="{{ hero.vit }}"
                 data-desc="{{ hero.description }}">

                <img src="{{ asset(hero.image) }}" alt="{{ hero.name }}">
            </div>
        {% endfor %}
    </div>

    {# ===== DETAILS (DROITE) ===== #}
    <div class="team-details" id="teamDetails">
        <div class="team-placeholder">
            <h2>Sélectionnez un héros</h2>
            <p>Cliquez sur une image pour afficher ses informations.</p>
        </div>
    </div>

</section>

<script src="{{ asset('js/team.js') }}"></script>
{% endblock %}
