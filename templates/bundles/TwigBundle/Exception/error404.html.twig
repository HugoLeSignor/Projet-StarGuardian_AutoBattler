{% extends 'base.html.twig' %}

{% block title %}{{ 'error.title_404'|trans }}{% endblock %}

{% block body %}
<div class="error-page">
    <section class="error-page__scene">
        <div class="error-page__vignette"></div>

        <div class="error-page__panel">
            <div class="error-page__ornament">&#x2726;</div>

            <div class="error-page__icon">
                <i class="fas fa-dungeon"></i>
            </div>

            <h1 class="error-page__code">404</h1>

            <div class="error-page__separator">
                <span></span>
                <i class="fas fa-skull"></i>
                <span></span>
            </div>

            <h2 class="error-page__title">{{ 'error.heading'|trans }}</h2>

            <p class="error-page__text">
                {{ 'error.text'|trans }}
            </p>

            <div class="error-page__actions">
                <a href="{{ path('app_home') }}" class="btn-dd btn-dd--primary">
                    <i class="fas fa-campground"></i>
                    {{ 'error.back_home'|trans }}
                </a>
                {% if app.user %}
                    <a href="{{ path('app_teams') }}" class="btn-dd btn-dd--secondary">
                        <i class="fas fa-shield-alt"></i>
                        {{ 'error.form_team'|trans }}
                    </a>
                {% endif %}
            </div>

            <div class="error-page__ornament">&#x2726;</div>
        </div>
    </section>
</div>
{% endblock %}
