{% extends 'base.html.twig' %}

{% block title %}{{ 'auth.login_title'|trans }}{% endblock %}

{% block body %}
<div class="auth-page">
    <div class="auth-page__vignette"></div>

    <div class="auth-panel">
        <div class="auth-panel__ornament">&#x2726;</div>
        <h1 class="auth-panel__title">{{ 'auth.login_title'|trans }}</h1>
        <div class="auth-panel__separator">
            <span></span>
            <i class="fas fa-dungeon"></i>
            <span></span>
        </div>

        {% if error %}
            <div class="auth-alert auth-alert--error">
                <i class="fas fa-exclamation-triangle"></i>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        {% for message in app.flashes('success') %}
            <div class="auth-alert auth-alert--success">
                <i class="fas fa-check"></i>
                {{ message|trans }}
            </div>
        {% endfor %}

        <form method="post" class="auth-form">
            <div class="auth-form__group">
                <label for="inputEmail" class="auth-form__label">{{ 'auth.email'|trans }}</label>
                <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="auth-form__input" placeholder="{{ 'auth.email_placeholder'|trans }}" required autofocus>
            </div>

            <div class="auth-form__group">
                <label for="inputPassword" class="auth-form__label">{{ 'auth.password'|trans }}</label>
                <input type="password" name="_password" id="inputPassword" class="auth-form__input" placeholder="{{ 'auth.password_placeholder'|trans }}" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn-dd btn-dd--primary btn-dd--full">{{ 'auth.submit_login'|trans }}</button>
        </form>

        <div class="auth-panel__separator auth-panel__separator--small">
            <span></span>
            <span></span>
        </div>

        <p class="auth-panel__link">
            {{ 'auth.no_account'|trans }} <a href="{{ path('app_register') }}">{{ 'auth.create_account'|trans }}</a>
        </p>
        <div class="auth-panel__ornament">&#x2726;</div>
    </div>
</div>
{% endblock %}
